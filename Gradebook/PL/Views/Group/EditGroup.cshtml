@model PL.Models.EditModels.EditGroupViewModel
@{
    ViewBag.Title = "EditGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card m-5">
    <h5 class="card-header text-center">Змінити назву групи @Model.Name</h5>
    <div class="card-body">
        <form class="p-a-1" action="/Group/EditGroup" method="post">
            <div class="form-group">
                <label for="Id"> Id: </label>
                <input class="form-control" name="Id" value="@Model.Id" readonly />
            </div>
            <div class="form-group">
                <label for="Name"> Назва: </label>
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Підтвердити</button>
            </div>
        </form>
    </div>
</div>

<p>@Html.ActionLink("До списку груп", "ShowGroups", "Group")</p>
<p>@Html.ActionLink("На головну", "Index", "Home")</p>
