@model PL.Models.EditModels.EditSubjectViewModel
@{
    ViewBag.Title = "EditSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditSubject</h2>

<div class="card m-5">
    <h5 class="card-header text-center">Змінити назву предмета @Model.Name</h5>
    <div class="card-body">
        <form class="p-a-1" action="/Subject/EditSubject" method="post">
            <div class="form-group">
                <label for="Id"> Id: </label>
                <input class="form-control" name="Id" value="@Model.Id" readonly />
            </div>
            <div class="form-group">
                <label for="Name"> Назва: </label>
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit </button>
            </div>
        </form>
    </div>
</div>

<p>@Html.ActionLink("До списку предметів", "ShowSubject", "Subject")</p>
<p>@Html.ActionLink("На головну", "Index", "Home")</p>

