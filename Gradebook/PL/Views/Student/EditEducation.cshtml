@model PL.Models.EducationViewModel
@{
    ViewBag.Title = "EditEducation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card m-5">
    <h5 class="card-header text-center">Змінити оцінку за предмет</h5>
    <div class="card-body">
        <form class="p-a-1" action="/Student/EditEducation" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label for="Id"> Id: </label>
                    <input class="form-control" name="Id" value="@Model.Id" readonly />
                </div>
                <div class="form-group">
                    <label for="IdStudent"> Студент: </label>
                    <input class="form-control" name="IdStudent" value="@Model.IdStudent" readonly />
                </div>
                <label for="SubjectName"> Предмет: </label>
                <input class="form-control" name="SubjectName" value="@Model.SubjectName" readonly />
            </div>
            <div class="form-group">
                <label for="SubjectResult"> Оцінка: </label>
                <input class="form-control" name="SubjectResult" type="number" max="100" min="1" value="@Model.SubjectResult" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Підтвердити</button>
            </div>
        </form>
    </div>
</div>

<p>@Html.ActionLink("До списку студентів", "ShowStudent", "Student")</p>
<p>@Html.ActionLink("На головну", "Index", "Home")</p>


