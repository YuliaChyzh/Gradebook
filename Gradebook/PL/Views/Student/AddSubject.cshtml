@model PL.Models.EducationViewModel
@{
    ViewBag.Title = "AddSubject";
}

<h2>AddSubject</h2>

<div class="card m-5">
    <h5 class="card-header text-center">Додати новий предмет студенту</h5>
    <div class="card-body">
        <form class="p-a-1" action="/Student/AddSubject" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label for="IdStudent"> Студент (Id): </label>
                    <input class="form-control" name="IdStudent" value="@Model.IdStudent" readonly/>
                </div>
                <label for="SubjectName"> Предмет: </label>
                <select id="subjects" name="SubjectName">
                    @foreach (var item in ViewBag.subjects)
                    {
                        <option>@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="SubjectResult"> Оцінка: </label>
                <input class="form-control" name="SubjectResult" type="number" max="100" min="1" value="@Model.SubjectResult"/>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit </button>
            </div>
        </form>
    </div>
</div>

